{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ESNext",
    "baseUrl": "./src",
    "allowJs": true,
    "typeRoots": [
      "./src/types"
    ],
    "paths": {
      "@/*": ["./lib/*"]
    }
  },
  "include": ["./src/**/*"]
}
